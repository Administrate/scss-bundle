{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "noLib": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}